{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
